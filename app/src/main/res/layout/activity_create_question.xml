<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/create_question_activity_edittext_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="4"
        android:background="@color/teal_700"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:hint="Votre question ?" />

    <EditText
        android:id="@+id/create_question_activity_edittext_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:textSize="20sp"
        android:hint="Answer1" />

    <EditText
        android:id="@+id/create_question_activity_edittext_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:textSize="20sp"
        android:hint="Answer2" />

    <EditText
        android:id="@+id/create_question_activity_edittext_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:textSize="20sp"
        android:hint="Answer3" />

    <EditText
        android:id="@+id/create_question_activity_edittext_4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:textSize="20sp"
        android:hint="Answer4" />

    <Button
        android:id="@+id/create_question_activity_button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:text="@string/MainActivity_ButtonCreate_Text" />
</LinearLayout>
